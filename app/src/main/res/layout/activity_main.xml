<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/dsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:hint="DataStore에 저장할 값을 입력해 주세요"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/prefEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="제출"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/prefEditText"
        app:layout_constraintStart_toStartOf="@+id/prefEditText"
        app:layout_constraintTop_toBottomOf="@+id/prefEditText" />

    <EditText
        android:id="@+id/prefEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="SharedPref에 저장할 값을 입력해 주세요."
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/dsEditText"
        app:layout_constraintStart_toStartOf="@+id/dsEditText"
        app:layout_constraintTop_toBottomOf="@+id/dsEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>